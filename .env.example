# Mobile Test Recorder - Environment Configuration
# Copy this file to .env and customize for your environment

# ===========================================
# TEST DATA GENERATION
# ===========================================

# Default password for generated test users
# Change this for your test environment
TEST_USER_PASSWORD=SecureTestPass123!

# ===========================================
# MOCK BACKEND SERVER
# ===========================================

# Mock mode: 'insecure' (plain text passwords for debugging) or 'secure' (hashed)
MOCK_MODE=insecure

# Default test password for mock backend users
MOCK_TEST_PASSWORD=DemoPass123!

# Mock server port
MOCK_SERVER_PORT=8000

# ===========================================
# APPIUM & DEVICE CONFIGURATION
# ===========================================

# Appium server URL
APPIUM_SERVER_URL=http://localhost:4723

# Default device wait timeout (seconds)
DEVICE_WAIT_TIMEOUT=30

# ===========================================
# CLOUD PROVIDERS (Optional)
# ===========================================

# BrowserStack
BROWSERSTACK_USERNAME=
BROWSERSTACK_ACCESS_KEY=

# Sauce Labs
SAUCE_USERNAME=
SAUCE_ACCESS_KEY=

# AWS Device Farm
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

# ===========================================
# NOTIFICATIONS (Optional)
# ===========================================

# Slack webhook URL for test notifications
SLACK_WEBHOOK_URL=

# Email SMTP settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# ===========================================
# ML & AI FEATURES
# ===========================================

# ML model server URL (if using external ML server)
ML_SERVER_URL=http://localhost:8080

# Enable/disable ML-based healing
ML_HEALING_ENABLED=true

# ===========================================
# SECURITY & PRIVACY
# ===========================================

# Enable telemetry (opt-in, anonymous usage statistics)
TELEMETRY_ENABLED=false

# Session encryption key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_ENCRYPTION_KEY=

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable verbose output
VERBOSE=false

# Enable debug mode (additional logging, stack traces)
DEBUG_MODE=false

# ===========================================
# ENTERPRISE FEATURES (PRO/Enterprise)
# ===========================================

# License key for PRO features
LICENSE_KEY=

# Enable distributed execution
DISTRIBUTED_EXECUTION=false

# Redis URL for distributed coordination
REDIS_URL=redis://localhost:6379

# ===========================================
# CI/CD INTEGRATION
# ===========================================

# CI environment detection (auto-detected, but can override)
CI=false

# Parallel execution workers
PARALLEL_WORKERS=4

# Test retry attempts on failure
TEST_RETRY_COUNT=2
