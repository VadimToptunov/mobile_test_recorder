<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration

  This file configures SSL/TLS security settings for different build variants.

  PRODUCTION BUILD:
  - Certificate pinning enabled
  - Only HTTPS connections allowed
  - No cleartext traffic
  - Strict hostname verification

  OBSERVE/TEST BUILDS:
  - Certificate pinning disabled (for MITM proxies)
  - Cleartext traffic allowed (for local testing)
  - Debug features enabled
-->
<network-security-config>

    <!-- Production Configuration (default) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust only system certificate authorities -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>

    <!-- Production API with Certificate Pinning -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.findemo.com</domain>

        <!-- Pin certificates -->
        <pin-set expiration="2026-12-31">
            <!-- Primary certificate pin -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>

            <!-- Backup certificate pin (for rotation) -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>

        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Debug Configuration (observe/test builds) -->
    <!-- This allows localhost and MITM proxies for testing -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>

            <!-- Trust user-installed CAs (for Charles/Proxyman) -->
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>

    <!-- Allow localhost for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- Android emulator host -->
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.0.0/16</domain>  <!-- Local network -->
    </domain-config>

</network-security-config>

