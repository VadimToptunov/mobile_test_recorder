[flake8]
max-line-length = 100
extend-ignore = E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .tox

# E501: line too long - handled by black with max-line-length=100
# W503: line break before binary operator - conflicts with black
per-file-ignores =
    __init__.py:F401

